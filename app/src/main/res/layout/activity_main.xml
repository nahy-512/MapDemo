<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.naver.maps.map.MapFragment"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_location_record_btn"
            android:layout_marginEnd="5dp"
            android:drawableStart="@drawable/ic_start"
            android:text="@string/start_location_update"
            style="@style/location_btn" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/stop_location_record_btn"
            android:layout_marginStart="5dp"
            android:drawableStart="@drawable/ic_stop"
            android:text="@string/stop_location_updates"
            style="@style/location_btn"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>